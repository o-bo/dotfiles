# Unix
alias ll="ls -al"
alias ln="ln -v"
alias mkdir="mkdir -p"
alias e="$EDITOR"
alias v="$VISUAL"

# Bundler
alias b="bundle"

# Rails
alias migrate="rake db:migrate db:rollback && rake db:migrate db:test:prepare"
alias s="rspec"
alias acp="RAILS_ENV=production rake assets:clean assets:precompile"
alias rpow="touch ~/.pow/restart.txt"

# Mysql
alias sqlstart="mysql.server start"
alias sqlstop="mysql.server stop"

# Elasticsearch
alias elastic="elasticsearch --config=/usr/local/opt/elasticsearch/config/elasticsearch.yml"

# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'

# Include custom aliases
[[ -f ~/.aliases.local ]] && source ~/.aliases.local

# Goodies
alias meteo="curl -4 http://wttr.in/Bordeaux"

# Git
alias rstart="git flow release start"
alias rend="git flow release finish"
alias fstart="git flow feature start"
alias fend="git flow feature finish"
alias hstart="git flow hotfix start"
alias hend="git flow hotfix finish"
